---------------Client---------

import java.net.*;
import java.io.*;
import java.nio.file.Files;

public class Client {
    public static void main(String[] args) throws Exception {
        File file = new File("D:/Test/input.txt");
        byte[] buffer = Files.readAllBytes(file.toPath());
        DatagramSocket clientSocket = new DatagramSocket();
        InetAddress serverAddress = InetAddress.getByName("localhost");
        DatagramPacket packet = new DatagramPacket(buffer, buffer.length, serverAddress, 6666);
        clientSocket.send(packet);
        System.out.println("File Sent");
    }
}

---------------Server---------

import java.io.FileOutputStream;
import java.net.*;

public class Server {
    public static void main(String[] args) throws Exception {
        byte[] buffer = new byte[1024];
        DatagramSocket serverSocket = new DatagramSocket(6666);
        DatagramPacket packet = new DatagramPacket(buffer, buffer.length);
        serverSocket.receive(packet);
        FileOutputStream fileOutputStream = new FileOutputStream("output.text");
        fileOutputStream.write(packet.getData(), packet.getOffset(), packet.getLength());
    }
}

