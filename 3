-----------Client----------------

import java.io.*;
import java.nio.file.Files;
import java.net.*;

public class Client {
    public static void main(String[] args) throws IOException {
        Socket s = new Socket("localhost", 6666);
        DataOutputStream dout = new DataOutputStream(s.getOutputStream());
        byte[] buffer = Files.readAllBytes(new File("D:/input.txt").toPath());
        dout.writeBytes(new String(buffer));
        dout.flush();
        dout.close();
        s.close();
        System.out.println("File Sent");
    }
}

-----------Server----------------

import java.io.*;
import java.net.*;
public class Server {
    public static void main(String[] args) throws IOException {
        ServerSocket ss = new ServerSocket(6666);
        Socket s = ss.accept();
        DataInputStream dis = new DataInputStream(s.getInputStream());
        FileOutputStream fos = new FileOutputStream("output.txt");
        byte[] buffere = new byte[1024 * 40];
        int bytesRead;
        while ((bytesRead = dis.read(buffere)) != -1) {
            fos.write(buffere, 0, bytesRead);
        }
        fos.close();
        ss.close();
        System.out.println("FileSaved");
    }
}
